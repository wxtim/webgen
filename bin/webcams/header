<script>
var dotims = document.getElementsByClassName('img');
console.log(dotims);
var slider = document.getElementById('myRange');
slider.onchange = function() {
    console.log(slider.value);
    for(var x in dotims) {
        dotims[x].style.width = slider.value +'px';
        dotims[x].style.height = slider.value + 'px';
    }
}
</script>
